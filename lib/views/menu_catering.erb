					<div id="menucontainer">
						<p>Please Note: <br />
							Â½ Tray serves 6-8 people <br />
							Full Tray serves 10-12 people <br /></p>

							<% @categories.each do |category| %>
								<h1 class="menucategory" ><%= category[:name].capitalize %></h1>
								<div class="menuitems">
									<div class="leftcolumn" >
										<div class="menuitem catering-header">
											<span>Tray</span><span>&frac12; Tray</span>
										</div>
										<% category[:catering_items].each do |item| %>
										<div class="menuitem"  style="float:left;">
											<h4 class="itemtitle"><span><%= item[:title] %></span>
												<span><%= item[:full_price]/100 %></span>
												<span class="halfPrice" ><%= item[:half_price]/100 %></span>
											</h4>
												<p class="ingredients"><%= item[:description] %></p>
											</div>
									<% end %>
								</div>
							<% end %>

							<div class="rightcolumn">
							</div>

					</div>
